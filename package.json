{
  "name": "zenforge",
  "displayName": "ZenForge",
  "description": "ZenForge  â€“ A custom VS Code configuration extension that transforms your editor into a focused, distraction-free coding environment, designed for developers who value both aesthetics and efficiency.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.webp",
  "main": "./extension.js",
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "configuration": {
      "title": "ZenForge",
      "properties": {
        "zenforge.applyNeovimSettings": {
          "type": "boolean",
          "default": false,
          "description": "Apply Neovim-specific settings when ZenForge settings are applied."
        }
      }
    },
    "commands": [
      {
        "command": "extension.applyCustomSettings",
        "title": "Apply Custom Settings"
      },
      {
        "command": "extension.installFonts",
        "title": "Install Fonts"
      },
      {
        "command": "zenforge.restoreBackedUpSettings",
        "title": "ZenForge: Restore User Settings"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohannesGezachew/ZENFORGE.git"
  }
}
